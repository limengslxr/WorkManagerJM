<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <!--任务编号-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_task_id" />

        <EditText
            android:id="@+id/et_task_id"
            style="@style/text_right_margin_style"
            android:inputType="number" />
    </LinearLayout>

    <!--工单类型-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_order_task_type" />

        <Spinner
            android:id="@+id/sp_task_type"
            style="@style/spinner_margin_style"/>

    </LinearLayout>

    <!--工单子类型-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_task_sub_type" />

        <Spinner
            android:id="@+id/sp_task_sub_type"
            style="@style/spinner_margin_style"/>

    </LinearLayout>

    <!--用户编号-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_costumer_number" />

        <EditText
            android:id="@+id/et_card_id"
            style="@style/text_right_margin_style"
            android:inputType="text" />

    </LinearLayout>

    <!--户名-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_user_number" />

        <EditText
            android:id="@+id/et_card_name"
            style="@style/text_right_margin_style"
            android:inputType="text" />

    </LinearLayout>

    <!--地址-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_address" />

        <EditText
            android:id="@+id/et_address"
            style="@style/text_right_margin_style"
            android:inputType="text" />

    </LinearLayout>

    <!--联系电话-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_contact_tel" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/text_right_margin_style"
            android:inputType="phone" />

    </LinearLayout>

    <!--处理人-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_resolve_person" />

        <EditText
            android:id="@+id/et_resolve_person"
            style="@style/text_right_margin_style"/>

    </LinearLayout>

    <!--处理时间-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_handle_time" />

        <TextView
            android:id="@+id/tv_resolve_time"
            style="@style/text_right_margin_style" />

    </LinearLayout>

    <!--表身号-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_seal_number" />

        <EditText
            android:id="@+id/et_bar_code"
            style="@style/text_right_no_margin_style" />

        <ImageButton
            android:id="@+id/ib_scan"
            style="@style/text_right_scan_style"/>

    </LinearLayout>

    <!-- 是否模糊查询 -->
    <CheckBox
        android:id="@+id/cb_fuzzy_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/text_if_fuzzy_search"
        android:checked="true"
        android:textColor="@color/color_gray_979797"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="@dimen/width_120"
        android:layout_height="@dimen/height_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/view_border"
        android:gravity="center"
        android:text="@string/text_search"
        android:textColor="@color/color_gray_5b5b5b"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>
