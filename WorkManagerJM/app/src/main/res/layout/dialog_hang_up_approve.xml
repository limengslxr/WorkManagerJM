<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--审批结果-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_approve_result" />

        <Spinner
            android:id="@+id/sp_approve_result"
            style="@style/spinner_margin_style" />
    </LinearLayout>

    <!--备注-->
    <LinearLayout style="@style/linear_layout_item">

        <TextView
            style="@style/text_left_style"
            android:text="@string/text_remark" />

        <EditText
            android:id="@+id/et_remark"
            style="@style/text_right_margin_style" />
    </LinearLayout>

</LinearLayout>