<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--用户名称-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/card_name" />

            <TextView
                android:id="@+id/tv_card_name"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--用户编号-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_costumer_number" />

            <TextView
                android:id="@+id/tv_card_id"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--册号-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_volume_id" />

            <TextView
                android:id="@+id/tv_volume_id"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--册内序号-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_volume_index" />

            <TextView
                android:id="@+id/tv_volume_index"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--地址-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_address" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/text_right_no_margin_style" />

            <ImageButton
                android:id="@+id/ib_map"
                style="@style/text_right_map_style" />
        </LinearLayout>

        <!--联系人-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_contact" />

            <TextView
                android:id="@+id/tv_contact"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--联系电话-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_tel" />

            <TextView
                android:id="@+id/tv_telephone"
                style="@style/text_right_no_margin_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_telephone"
                style="@style/text_right_tel_style" />
        </LinearLayout>

        <!--工单来源-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_task_original" />

            <TextView
                android:id="@+id/tv_task_original"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--欠费跨度-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_arrears_time_range" />

            <TextView
                android:id="@+id/tv_arrears_time_range"
                style="@style/text_right_margin_style" />

        </LinearLayout>

        <!--欠费金额-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_the_amount_of_arrears" />

            <TextView
                android:id="@+id/tv_the_amount_of_arrears"
                style="@style/text_right_margin_style" />

        </LinearLayout>

        <!--备注-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_remark" />

            <TextView
                android:id="@+id/tv_remark"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--派单时间-->
        <LinearLayout
            android:id="@+id/ll_register_time"
            style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_register_time" />

            <TextView
                android:id="@+id/tv_register_time"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--处理时限-->
        <LinearLayout
            android:id="@+id/ll_end_time"
            style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_handler_time_limit" />

            <TextView
                android:id="@+id/tv_end_time"
                style="@style/text_right_margin_style" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>