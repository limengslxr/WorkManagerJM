<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--主办人-->
        <LinearLayout
            android:id="@+id/ll_host_person"
            style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_host_person" />

            <TextView
                android:id="@+id/tv_host_person"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--协助人-->
        <LinearLayout
            android:id="@+id/ll_assist_person"
            style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_assist_person" />

            <TextView
                android:id="@+id/tv_assist_person"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--司机-->
        <LinearLayout
            android:id="@+id/ll_driver"
            style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_driver" />

            <TextView
                android:id="@+id/tv_driver"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--备注-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_remark" />

            <TextView
                android:id="@+id/tv_remark"
                style="@style/text_right_margin_style" />

        </LinearLayout>

        <!--工单来源-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_task_original" />

            <TextView
                android:id="@+id/tv_task_original"
                style="@style/text_right_margin_style" />

        </LinearLayout>

        <!--工单类型-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_order_type" />

            <TextView
                android:id="@+id/tv_task_type"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--派单时间-->
        <LinearLayout
            android:id="@+id/ll_register_time"
            style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_register_time" />

            <TextView
                android:id="@+id/tv_register_time"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--处理时限-->
        <LinearLayout
            android:id="@+id/ll_end_time"
            style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_handler_time_limit" />

            <TextView
                android:id="@+id/tv_end_time"
                style="@style/text_right_margin_style" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>