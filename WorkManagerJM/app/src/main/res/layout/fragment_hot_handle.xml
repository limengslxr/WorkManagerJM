<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--处理类别-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_handle_type" />

            <Spinner
                android:id="@+id/sp_handle_type"
                style="@style/spinner_no_margin_style" />

            <TextView
                android:id="@+id/tv_handle_type"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--处理内容-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_handle_content" />

            <Spinner
                android:id="@+id/sp_handle_content"
                style="@style/spinner_no_margin_style" />

            <TextView
                android:id="@+id/tv_handle_content"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--处理结果-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_handle_result" />

            <Spinner
                android:id="@+id/sp_handle_result"
                style="@style/spinner_no_margin_style" />

            <TextView style="@style/text_right_star_style" />
        </LinearLayout>

        <!--处理部门-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_handle_department" />

            <Spinner
                android:id="@+id/sp_handle_department"
                style="@style/spinner_no_margin_style" />

            <TextView
                android:id="@+id/tv_handle_department"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--表管阀分类-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_meter_valve_type" />

            <Spinner
                android:id="@+id/sp_valve_type"
                style="@style/spinner_no_margin_style" />

            <TextView
                android:id="@+id/tv_valve_type"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--口径-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_meter_caliber" />

            <Spinner
                android:id="@+id/sp_new_meter_caliber"
                style="@style/spinner_no_margin_style" />

            <TextView
                android:id="@+id/tv_new_meter_caliber"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--发生原因-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_happen_reason" />

            <Spinner
                android:id="@+id/sp_happen_reason"
                style="@style/spinner_no_margin_style" />

            <TextView
                android:id="@+id/tv_happen_reason"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--处理方式-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_resolve_method" />

            <Spinner
                android:id="@+id/sp_resolve_method"
                style="@style/spinner_no_margin_style" />

            <TextView
                android:id="@+id/tv_resolve_method"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--处理备注-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_handle_remark" />

            <EditText
                android:id="@+id/et_remark"
                style="@style/text_remark_no_margin_style" />

            <TextView
                android:id="@+id/tv_remark"
                style="@style/text_right_star_style" />
        </LinearLayout>

        <!--物料-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_materiel" />

            <Button
                android:id="@+id/btn_input_material"
                style="@style/text_right_add_style" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>