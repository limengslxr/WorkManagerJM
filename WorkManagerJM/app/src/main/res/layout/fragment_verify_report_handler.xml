<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--催缴方式-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_call_pay_method" />

            <Spinner
                android:id="@+id/sp_call_pay_method"
                style="@style/spinner_no_margin_style"/>

            <TextView style="@style/text_right_star_style" />

        </LinearLayout>

        <!--备注-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_remark" />

            <EditText
                android:id="@+id/et_remark"
                style="@style/text_remark_margin_style" />

        </LinearLayout>

        <!-- 是否停水 -->
        <CheckBox
            android:id="@+id/cb_stop_water"
            style="@style/check_box_detail"
            android:text="@string/text_if_stop_water"/>

    </LinearLayout>
</ScrollView>