<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--任务编号-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_work_id" />

            <TextView
                android:id="@+id/tv_task_id"
                style="@style/text_right_margin_style"/>
        </LinearLayout>

        <!--工单类型-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_order_task_type" />

            <TextView
                android:id="@+id/tv_task_type"
                style="@style/text_right_margin_style"/>
        </LinearLayout>

        <!-- 审核状态 -->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_verify_status" />

            <TextView
                android:id="@+id/tv_verify_status"
                style="@style/text_right_margin_style" />
        </LinearLayout>

        <!--申请人-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_apply_person" />

            <TextView
                android:id="@+id/tv_apply_person"
                style="@style/text_right_margin_style"/>
        </LinearLayout>

        <!--申请原因-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/detail_apply_reason" />

            <TextView
                android:id="@+id/tv_apply_reason"
                style="@style/text_right_margin_style"/>
        </LinearLayout>

        <!--完成时间-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_complete_date" />

            <TextView
                android:id="@+id/tv_complete_date"
                style="@style/text_right_margin_style"/>
        </LinearLayout>

        <!--完成截止时间-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_complete_end_date" />

            <TextView
                android:id="@+id/tv_complete_end_date"
                style="@style/text_right_margin_style"/>
        </LinearLayout>

        <!--申请时间-->
        <LinearLayout style="@style/linear_layout_item">

            <TextView
                style="@style/text_left_style"
                android:text="@string/text_apply_date" />

            <TextView
                android:id="@+id/tv_apply_date"
                style="@style/text_right_margin_style"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>